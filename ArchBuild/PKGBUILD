# Maintainer: Bailey Kasin <bailey@gingertechnology.net> (https://angrysysadmins.tech)

pkgname=gogios-bin
pkgver=1.1
pkgrel=3
pkgdesc="Checks to see if required services are still running on important machines."
arch=('x86_64')
url="https://angrysysadmins.tech"
license=('MIT')
depends=(
    'dotnet-sdk'
    'dotnet-runtime'
    'dotnet-host'
)
optdepends=('nginx')
source=("gogios.deb")
options=('!strip' '!emptydirs')
install=${pkgname}.install
noextract=("gogios.deb")
sha256sums=('3dfbfe5c4185f1115c75df231d95f95469af36c24bd77e8e75acc07e9291c32e')

package() {
    bsdtar -O -xf gogios.deb data.tar.xz | bsdtar -C "${pkgdir}" -xJf -

    # Permission fix
    find "${pkgdir}" -type d -exec chmod 755 {} +
}
